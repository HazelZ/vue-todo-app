.helper{
  font-weight:100;
  display:flex;
  justify-content:space-between;
  padding:5px 0;
  line-height:30px;
  background-color:#fff;
  font-size:14px;
  }
.left,
.tabs,
.clear {
  padding:0 10px;
  box-sizing:border-box;
  }
.left,
.clear{
  width:150px;
  }
.left{
  text-align:left;
  user-select: none;
}
.clear {
  text-align:right;
  cursor:pointer;
  user-select: none;
  }
.tabs {
  width:200px;
  display:flex;
  justify-content:space-around;
  * {
    display:inline-block;
    padding: 0 10px;
    cursor:pointer;
    border:1px solid rgba(175,47,47,0);
    user-select: none;
    &.actived {
      border-color:rgba(255,204,153,1);
      border-radius:5px;
      }
  }
}